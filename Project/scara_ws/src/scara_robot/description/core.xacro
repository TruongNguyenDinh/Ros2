<?xml version="1.0"?>
<xacro:macro name="scara_core" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <!-- Base -->
  <link name="base_link">
    <visual>
      <origin xyz="0.0 0.0 0.25"/>
      <geometry>
        <box size="1.0 1.0 0.5"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0.0 0.0 0.25"/>
      <geometry>
        <box size="1.0 1.0 0.5"/>
      </geometry>
    </collision>
  </link>

  <!-- Joint 1 -->
  <joint name="joint_1" type="revolute">
    <parent link="base_link"/>
    <child link="link_1"/>
    <origin xyz="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="1.0"/>
  </joint>

  <!-- Link 1 -->
  <link name="link_1">
    <visual>
      <origin xyz="0 0 0.75"/>
      <geometry>
        <cylinder radius="0.2" length="1.0"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0.75"/>
      <geometry>
        <cylinder radius="0.2" length="1.0"/>
      </geometry>
    </collision>
  </link>
  <!-- Joint 2  -->
  <joint name="joint_2" type="fixed">
    <origin xyz="0.0 0.0 1.25" rpy="0.0 0.0 0.0"/>
    <parent link="link_1"/>
    <child link="link_2"/>
    <axis xyz="0.0 0.0 0.0"/>
    <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0"/>
  </joint>

  <link name="link_2">
    <visual>
        <origin xyz="0.5 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <geometry>
            <box size="1 0.3 0.3"/>
        </geometry>
        <material name="">
            <color rgba="0.0 1.0 0.0 1.0"/>
            <texture filename=""/>
        </material>
    </visual>
    <collision>
        <origin xyz="0.5 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <geometry>
            <box size="1 0.3 0.3"/>
        </geometry>
    </collision>
  </link>
  <!-- Joint 3 -->
    <joint name="joint_3" type="revolute">
        <origin xyz="1.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <parent link="link_2"/>
        <child link="link_3"/>
        <axis xyz="0.0 0.0 1.0"/>
        <limit lower="-1.57" upper="1.57" effort="10" velocity="1.0"/>
    </joint>

    <link name="link_3">
        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.2" length="0.3"/>
            </geometry>
            <material name="">
                <color rgba="1.0 0.0 0.0 1.0"/>
                <texture filename=""/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.2" length="0.3"/>
            </geometry>
        </collision>
    </link>
    <!-- Joint 4 -->
    <joint name="joint_4" type="fixed">
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <parent link="link_3"/>
        <child link="link_4"/>
        <axis xyz="0.0 0.0 0.0"/>
        <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0"/>
    </joint>

    <link name="link_4">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.0"/>
            <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
        </inertial>
        <visual name="">
            <origin xyz="0.5 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="1 0.3 0.3"/>
            </geometry>
            <material name="">
                <color rgba="0.0 1.0 0.0 1.0"/>
                <texture filename=""/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.5 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <box size="1 0.3 0.3"/>
            </geometry>
        </collision>
    </link>
    <!-- Joint 5 -->
    <joint name="joint_5" type="fixed">
        <origin xyz="1.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
        <parent link="link_4"/>
        <child link="link_5"/>
        <axis xyz="0.0 0.0 0.0"/>
        <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0"/>
    </joint>

    <link name="link_5">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.0"/>
            <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
        </inertial>
        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.2" length="0.3"/>
            </geometry>
            <material name="">
                <color rgba="1.0 0.0 0.0 1.0"/>
                <texture filename=""/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.2" length="0.3"/>
            </geometry>
        </collision>
    </link>
    <!-- Joint 6 -->
    <joint name="joint_6" type="prismatic">
        <origin xyz="0 0 0" rpy="${pi} 0 0"/>
        <parent link="link_5"/>
        <child link="link_6"/>
        <axis xyz="0.0 0.0 1.0"/>
        <limit lower="0" upper="0.5" effort="10.0" velocity="1.0"/>
    </joint>
     
    <link name="link_6">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="0.0"/>
            <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
        </inertial>
        <visual name="">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.05" length="1.5"/>
            </geometry>
            <material name="">
                <color rgba="0.0 0.0 1.0 1.0"/>
                <texture filename=""/>
            </material>
        </visual>
        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.05" length="1.5"/>
            </geometry>
        </collision>
    </link>
</xacro:macro>
